{{!-- src/views/cart.handlebars --}}
{{#if cart}}
  <h2>Carrito {{cart._id}}</h2>

  {{#if cart.products.length}}
    <table border="1" cellpadding="4" cellspacing="0">
      <thead>
        <tr>
          <th>Producto</th>
          <th>Precio</th>
          <th>Cantidad</th>
        </tr>
      </thead>
      <tbody>
        {{#each cart.products}}
          <tr>
            <td>{{this.product.title}}</td>
            <td>${{this.product.price}}</td>
            <td>{{this.quantity}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>El carrito está vacío.</p>
  {{/if}}
{{else}}
  <h2>Carrito no encontrado</h2>
{{/if}}
